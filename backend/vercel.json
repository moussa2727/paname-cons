{
  "version": 2,
  "name": "paname-consulting-backend",
  "buildCommand": "pnpm install && pnpm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/main"
    },
    {
      "source": "/(.*)",
      "destination": "/api/main"
    }
  ]
}