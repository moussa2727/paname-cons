# =====================================
# PANAME CONSULTING - Configuration
# =====================================

# ===== DATABASE =====
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/DATABASE_NAME

# ===== SERVER =====
PORT=10000
NODE_ENV=development
HOST=0.0.0.0

# ===== JWT =====
JWT_SECRET=votre_secret_jwt_tres_securise_minimum_32_caracteres
JWT_EXPIRES_IN=24h
COOKIE_SECRET=votre_cookie_secret_pour_la_securite

# ===== EMAIL/SMTP =====
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_application_gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ===== ADMIN CONFIGURATION =====
# Email de l'administrateur principal (accès illimité même en maintenance)
EMAIL_USER=admin@panameconsulting.com

# ===== MAINTENANCE MODE =====
MAINTENANCE_MODE=false

# ===== FRONTEND =====
FRONTEND_URL=http://localhost:5173
BASE_URL=http://localhost:10000

# ===== FILE UPLOAD =====
UPLOAD_DIR=./uploads
LOAD_DIR=./uploads

# ===== LOGGING =====
LOG_DIR=./logs
LOG_RETENTION_DAYS=3

# ===== REDIS (Optionnel pour caching) =====
REDIS_URL=redis://localhost:6379

# ===== DEPLOYMENT =====
VERCEL=false
NOW_REGION=

# ===== SECURITY =====
CORS_ORIGIN=http://localhost:5173

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== NOTIFICATIONS =====
RESEND_API_KEY=votre_cle_api_resend

# ===== CACHE =====
CACHE_TTL=3600
